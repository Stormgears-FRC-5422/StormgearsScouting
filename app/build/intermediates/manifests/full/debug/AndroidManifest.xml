<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stormgearsscouting"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="com.example.stormgearsscouting.StormgearsScouting"
        android:allowBackup="true"
        android:icon="@drawable/stormgears_scouting_icon"
        android:label="@string/app_name"
        android:persistent="false"
        android:theme="@style/Theme.AppCompat" >
        <activity
            android:name="com.example.stormgearsscouting.MainMenu"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.stormgearsscouting.ScoutingForm"
            android:label="@string/title_activity_scouting_form"
            android:parentActivityName="com.example.stormgearsscouting.MainActivity"
            android:windowSoftInputMode="adjustResize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.MainMenu" />
        </activity>
        <activity
            android:name="com.example.stormgearsscouting.ScoutingDataViewer"
            android:label="@string/title_activity_scouting_data_viewer"
            android:parentActivityName="com.example.stormgearsscouting.MainMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.stormgearsscouting.MainMenu" />
        </activity>
        <activity
            android:name="com.example.stormgearsscouting.Settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.example.stormgearsscouting.MainMenu"
            android:windowSoftInputMode="adjustResize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.stormgearsscouting.MainMenu" />
        </activity>
        <activity
            android:name="com.example.stormgearsscouting.BluetoothSender"
            android:label="@string/title_activity_bluetooth_sender" />
        <activity
            android:name="com.example.stormgearsscouting.PitScoutingForm"
            android:label="@string/title_activity_pit_scouting_form"
            android:parentActivityName="com.example.stormgearsscouting.MainMenu"
            android:windowSoftInputMode="adjustResize" />
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.example.stormgearsscouting.MatchScoutingHelp"
            android:label="@string/title_activity_match_scouting_help"
            android:parentActivityName="com.example.stormgearsscouting.ScoutingForm" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.stormgearsscouting.ScoutingForm" />
        </activity>
    </application>

</manifest>